{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "Bundler", // <— вот это главное
    "target": "ES2022",
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "moduleDetection": "force",
    "types": ["node"] // см. пункт 3
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
